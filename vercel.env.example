# Arquivo de configuração para deploy no Vercel
# Configure estas variáveis no dashboard do Vercel

# Configurações obrigatórias para produção
SAPIENS_ENV=producao
SAPIENS_DEBUG=false
SAPIENS_LOG_LEVEL=WARNING
FLASK_ENV=producao
FLASK_DEBUG=false
FLASK_SECRET_KEY=sua-secret-key-muito-segura-aqui

# Configurações de ambiente serverless
WEB_HOST=0.0.0.0
WEB_PORT=5000
UPLOAD_FOLDER=/tmp/uploads
LOGS_FOLDER=/tmp/logs
TEMP_FOLDER=/tmp/temp

# Configurações de auditoria (ajustadas para serverless)
AUDIT_RETENTION_DAYS=30
AUDIT_FORMAT=json
MAX_CONCURRENT_ANALYSES=1
ANALYSIS_TIMEOUT_MINUTES=10
ENABLE_CACHE=true

# Desabilitar recursos não suportados em serverless
FLASK_AUTO_RELOAD=false
LOG_SQL_QUERIES=false
SAVE_REQUESTS_RESPONSES=false
